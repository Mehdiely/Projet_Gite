{# exemple/exemple.html.twig #}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Liste des Gîtes</title>
    <!-- Ajoutez les liens Bootstrap CSS ici -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous"></head>
<body>
    <div class="container mt-4">
     
        <div class="row">
               <h1> Recherche du Gite Parfait</h1>

    {{ form_start(form) }}

    <div class="row">
        <div class="col-md-12">
            {{ form_row(form.selectedVille) }}
            {{ form_row(form.selectedDepartement) }}
            {{ form_row(form.selectedRegion) }}
        </div>

        <div class="col-md-4">
            <h3>Les Equipements Exterieurs</h3>
            {{ form_row(form.bbq) }}
            {{ form_row(form.terrasse) }}
            {{ form_row(form.piscinepart) }}
            {{ form_row(form.piscinepriv) }}
            {{ form_row(form.tennis) }}
            {{ form_row(form.pingpong) }}
        </div>

        <div class="col-md-4">
            <h3>Les Equipements Interieurs</h3>
            {{ form_row(form.lavelinge) }}
            {{ form_row(form.lavevaiss) }}
            {{ form_row(form.clim) }}
            {{ form_row(form.tele) }}
        </div>
 

   
        <div class="col-md-4">
            <h3>Les Services</h3>
            {{ form_row(form.loclinge) }}
            {{ form_row(form.menage) }}
            {{ form_row(form.internet) }}
       
    </div>
   </div>
<br>

 <div class="text-center mt-4">
 <button type="submit" class="btn btn-primary">Rechercher</button>        </div>

   

    {{ form_end(form) }}
        </div>
    </div>
  <br>
        
    {% if gites %}
  {% for gite in gites %}
                <div class="col-md-7 mx-auto">
                    <div class="card mb-4 mx-auto">
                        <div class="card-body">
                            <h5 class="card-title">{{ gite.Nomgite }}</h5>
                            <p class="card-text"><strong>Ville:</strong> {{ gite.ville }}</p>
                            <p class="card-text"><strong>Surface:</strong> {{ gite.surface }} m²</p>
                            <p class="card-text"><strong>Couchage:</strong> {{ gite.couchage }}</p>
                            <p class="card-text"><strong>Région:</strong> {{ gite.region }}</p>
                            <p class="card-text"><strong>Departement:</strong> {{ gite.departement }}</p>
                            <p class="card-text"><strong>Numéro du propriétaire:</strong> 0{{ gite.idproprio.numero }}</p>
                         <a href="{{ path('app_detail', {'id': gite.id}) }}" class="btn btn-primary">Voir les détails</a>
                        </div>
                    </div>
                </div>
              
               

            {% endfor %}

 {% else %}
 <div class="text-center mt-4">
            <h3>Aucun gîte ne correspond à votre recherche</h3>
        </div>

							{% endif %}
 <div class="text-center mt-4">
                         <a href="{{ path('app_acceuil')}}" class="btn btn-primary"> Retoue a l'accueil</a>
        </div>
    <!-- Ajoutez les scripts Bootstrap JS ici -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.1/dist/umd/popper.min.js" integrity="sha384-Lz98nvR+JoGzsoeg+aLZzda9O7/gG0ejb5tq9qoH2PcFP68R2Y59Gttr
